<% provide(:title, '画像一覧') %>
<% provide(:robots, 'false') %>
<% provide(:layout_style, '') %>
<% provide(:ga4, 'false') %>

<h1>画像一覧</h1>
<% @images.each do |image| %>
<div>
  <p>ID:<%= image.aid %></p>
  <p>画像名:<%= image.name %></p>
  <p>variants:<%= image.variants.join(" ") %></p>
  <%# image_tag(image.image_url) %>
  <%= link_to('見る', image_path(image.aid)) %>
  <%= link_to('編集', edit_image_path(image.aid)) %>
  <% if image.variants.include?('images') %>
    variants/imagesがあります
    <%= image_tag(image.image_url(variant_type: 'images'), alt: "#{image.name}") %>
  <% else %>
    variants/imagesはない
  <% end %>
</div>
<% end %>
<%= render 'shared/paging', pages: @images_page, page: params[:page], page_to: 'images' %>