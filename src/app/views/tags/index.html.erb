<% provide(:title, 'タグ一覧') %>
<% provide(:robots, 'false') %>
<% provide(:description, 'タグ一覧') %>
<% provide(:keywords, 'タグ一覧') %>
<% provide(:layout_style, 'full') %>

<h1>タグ一覧</h1>
<% @tags.each do |tag| %>
  <%= link_to tag_path(tag.name_id), class: 'tag-path' do %>
    <div class="tag-top">
      <div class="tag-name">
        <%= tag.name %>
      </div>
      <div class="tag-description">
        <%= strip_tags tag.description_cache %>
      </div>
    </div>
  <% end %>
<% end %>
