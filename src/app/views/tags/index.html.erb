<% keywords = 'タグ一覧' %>
<% authors = '' %>
<% provide(:title, 'タグ一覧') %>
<% provide(:author, authors) %>
<% provide(:description, 'タグ一覧') %>
<% provide(:keywords, keywords) %>
<% provide(:robots, 'index, follow') %>
<% provide(:url, full_url("/tags/")) %>
<% provide(:type, 'website') # website or article %>
<% provide(:image, "/") %>
<% provide(:card, 'summary') # summary,summary_large_image, app, player %>
<% provide(:alt, '') %>
<% provide(:id, '') %>
<% provide(:layout_style, 'full') %>
<% provide(:ga4, 'true') %>

<h1>タグ一覧</h1>
<% @tags.each do |tag| %>
  <%= link_to tag_path(tag.aid), class: 'tag-path' do %>
    <div class="tag-top">
      <div class="tag-name">
        <%= tag.name %>
      </div>
      <div class="tag-description">
        <%= tag.description %>
      </div>
    </div>
  <% end %>
<% end %>