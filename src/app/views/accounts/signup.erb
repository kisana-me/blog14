<% provide(:title, 'サインアップ') %>
<% provide(:description, 'サインアップ') %>
<% provide(:keywords, 'サインアップ') %>
<% provide(:robots, 'false') %>
<% provide(:layout_style, '') %>
<% provide(:ga4, 'false') %>

<%= form_with(model: @account, url: signup_path, data: { turbo: false }) do |f| %>
  <%= render 'shared/error_messages', instead: @account %>
  <div class="login-inputs">
    <div class="login-input">
      <%= f.label :invitation_code, '招待コード', class: 'login-input-label' %>
      <%= f.text_field :invitation_code, class: 'login-input-field', placeholder: '招待コード', value: @reform.present? ? @reform[:invitation_code] : '' %>
    </div>
    <div>
      <%= f.label :icon, 'アイコン' %>
      <%= f.file_field :icon %>
    </div>
    <div class="login-input">
      <%= f.label :name, '名前', class: 'login-input-label' %>
      <%= f.text_field :name, class: 'login-input-field', placeholder: '名前' %>
    </div>
    <div class="login-input">
      <%= f.label :name_id, 'ログインID', class: 'login-input-label' %>
      <%= f.text_field :name_id, class: 'login-input-field', placeholder: 'ログインID' %>
    </div>
    <div class="login-input">
      <%= f.label :password, 'パスワード', class: 'login-input-label' %>
      <%= f.password_field :password, class: 'login-input-field', placeholder: 'パスワード', value: @reform.present? ? @reform[:password] : '' %>
    </div>
    <div class="login-input">
      <%= f.label :password_confirmation, 'パスワード(確認)', class: 'login-input-label' %>
      <%= f.password_field :password_confirmation, class: 'login-input-field', placeholder: 'パスワード(確認)', value: @reform.present? ? @reform[:password_confirmation] : '' %>
    </div>
  </div>
  <%= f.submit "サインアップ" %>
<% end %>