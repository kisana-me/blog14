<% keywords = '' %>
<% authors = '' %>
<% provide(:title, 'ログイン') %>
<% provide(:author, authors) %>
<% provide(:description, 'ログイン') %>
<% provide(:keywords, keywords) %>
<% provide(:robots, 'noindex, nofollow') %>
<% provide(:url, full_url("/")) %>
<% provide(:type, 'website') # website or article %>
<% provide(:image, "/") %>
<% provide(:card, 'summary') # summary,summary_large_image, app, player %>
<% provide(:alt, '') %>
<% provide(:id, '') %>
<% provide(:layout_style, '') %>

<%= form_with(scope: :session, url: login_path, data: { turbo: false }) do |f| %>
  <% if @error_message.present? %>
    <div class="alert alert-danger">
      <%= @error_message %>
    </div>
  <% end %>
  <div class="login-inputs">
    <div class="login-input">
      <%= f.label :name_id, 'ID', class: 'login-input-label' %>
      <%= f.text_field :name_id, class: 'login-input-field', placeholder: 'ID', value: @reform.present? ? @reform[:name_id] : '' %>
    </div>
    <div class="login-input">
      <%= f.label :password, 'パスワード', class: 'login-input-label' %>
      <%= f.password_field :password, class: 'login-input-field', placeholder: 'パスワード', value: @reform.present? ? @reform[:password] : '' %>
    </div>
  </div>
  <%= f.submit "ログイン" %>
<% end %>
<%= link_to "サインアップ", signup_path %>