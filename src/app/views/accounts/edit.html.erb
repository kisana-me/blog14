<% provide(:title, '編集') %>
<% provide(:layout_style, '') %>

<%= form_with(model: @account, url: account_path(@account.aid), method: :patch, data: { turbo: false }) do |f| %>
  <%= render 'shared/error_messages', instead: @account %>
  <div class="login-inputs">
    <div class="login-input">
      <%= f.label :name, '名前', class: 'login-input-label' %>
      <%= f.text_field :name, class: 'login-input-field', placeholder: '名前' %>
    </div>
    <div class="login-input">
      <%= f.label :name_id, 'ログインID', class: 'login-input-label' %>
      <%= f.text_field :name_id, class: 'login-input-field', placeholder: 'ID' %>
    </div>
    <div>
      <%= f.label :icon, 'アイコン' %>
      <%= f.file_field :icon %>
    </div>
    <div class="login-input">
      <%= f.label :description, '紹介文', class: 'login-input-label' %>
      <%= f.text_area :description, class: 'login-input-field', placeholder: '紹介文' %>
    </div>
    <div>
      <%= f.label :public, "公開" %>
      <%= f.check_box :public %>
    </div>
  </div>
  <%= f.submit "変更" %>
<% end %>